{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node", "mocha", "chai", "hardhat"]
  },
  "include": ["scripts/**/*", "test/**/*", "typechain-types/**/*"],
  "files": ["hardhat.config.ts"]
}
